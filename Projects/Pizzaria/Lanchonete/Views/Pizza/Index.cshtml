@model IEnumerable<PizzaModel>

<div class="py-5">
    <div class="container">
        <div class="text-center mb-5" style="padding-bottom: 40px">
            <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Pizza">Cadastrar nova pizza</a>
        </div>

        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 gap-lg-5 g-1 d-inline-flex justify-content-center">
            @* Chamando a lista de pizzas: *@
            @if (Model != null)    @* Verificando se a lista não é nula *@
            {
                @if (Model.Count() > 0)   @* Se houver um valor no elemento da lista *@
                {
                    @foreach (var pizza in Model)
                    {
                        <div class="card mx-2 my-2 p-2" style="width: 16rem">
                                @if (pizza.Capa != null)        @* Verificando se existe uma foto cadastrada para a pizza específica*@
                                {
                                    <img src="/imagem/@pizza.Capa" class="card-img-top" style="height: 150px; width: 100%;">
                                }
                                else
                                {
                                    <img src="..." class="card-img-top">
                                }
                                <div class="card-body">
                                    <h5 class="card-title text-center">@pizza.Sabor</h5>
                                    @* Você pode adicionar mais detalhes da pizza aqui, se necessário *@
                                </div>
                                <div class="card-body" style="padding: 0">
                                    <a class="btn btn-warning w-100 my-3" asp-action="Editar" asp-controller="Pizza" asp-route-id="@pizza.Id">Editar</a>
                                    <a class="btn btn-danger w-100" asp-action="Remover" asp-controller="Pizza" asp-route-id="@pizza.Id">Remover</a>
                                </div>
                        </div>
                    }
                }
                else
                {
                    <p>Nenhuma pizza cadastrada.</p>
                }
            }
            else
            {
                <p>A lista de pizzas está vazia.</p>
            }
        </div>
    </div>
</div>





                                